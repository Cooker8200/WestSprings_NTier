@model WestSprings_ViewModels.WestSprings_Contact

<h2>Need to get in touch?</h2>
<hr />

@using (Html.BeginForm("ContactMessage", "Contact", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @*<div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-lg-2 control label" })
        <div class="col-lg-10">
            @Html.DropDownListFor(m => m.SendToID, Model.SendToID)
